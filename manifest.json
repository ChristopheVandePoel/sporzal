{
	"name": "Sporza Rio player Portal",
	"version": "0.0.2",
	"description": "Play sporza HLS video without the flash overhead",
	"manifest_version": 2,
	"permissions": [
		"tabs"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_title": ""
	},
	"content_scripts": [{
		"js": ["hls.js"],
		"matches": ["http://*/*", "https://*/*"]
	}]
}